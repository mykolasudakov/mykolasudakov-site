---
const {
  title = "Mykola Sudakov",
  lang = "en",
  active = "home", // home | research | projects | publications
} = Astro.props;

const isUA = lang === "uk";
const homeHref = isUA ? "/" : "/en/";
const researchHref = isUA ? "/research/" : "/en/research/";
const projectsHref = isUA ? "/projects/" : "/en/projects/";
const publicationsHref = isUA ? "/publications/" : "/en/publications/";
const switchToHref = isUA ? "/en/" : "/";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <link rel="stylesheet" href="/global.css" />
  </head>

  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a class="brand" href={homeHref}>
          {isUA ? "Микола Судаков" : "Mykola Sudakov"}
        </a>

        <nav class="nav">
          <a class={active === "research" ? "active" : ""} href={researchHref}>
            {isUA ? "Дослідження" : "Research"}
          </a>
          <a class={active === "projects" ? "active" : ""} href={projectsHref}>
            {isUA ? "Проєкти" : "Projects"}
          </a>
          <a class={active === "publications" ? "active" : ""} href={publicationsHref}>
            {isUA ? "Публікації" : "Publications"}
          </a>
        </nav>

        <div class="lang">
          <a class={isUA ? "active" : ""} href="/">UA</a>
          <a class={!isUA ? "active" : ""} href="/en/">EN</a>
        </div>
      </div>

      <div class="container">
        <div class="rule"></div>
      </div>
    </header>

    <main class="container page">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-inner">
        <div class="footer-rule"></div>
        <div class="footer-text">
          <div>© 2026 Mykola Sudakov</div>
          <div class="muted">Exploring the structural logics of work and social change.</div>
        </div>
      </div>
    </footer>
  </body>
</html>
